{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "price": {
      "type": "decimal"
    },
    "picture": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "quantity": {
      "type": "integer",
      "max": 10
    },
    "mrp": {
      "type": "decimal",
      "required": false
    },
    "colour": {
      "type": "string"
    },
    "users_permissions_user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "products"
    },
    "cart": {
      "model": "cart",
      "via": "products"
    },
    "orders": {
      "via": "product",
      "collection": "order"
    }
  }
}
